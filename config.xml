<?xml version='1.0' encoding='utf-8'?>
<widget id="io.zensystem.zencashwallet" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ZEN Wallet</name>
    <description>
        ZEN Wallet
    </description>
    <author email="kendricktan0814@gmail.com" href="https://kndrck.co">
        Kendrick Tan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="iosPersistentFileLocation" value="Compatibility" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <hook src="./scripts/build.sh" type="before_prepare" />
    <icon src="./assets/img/zencash.png" />
    <plugin name="cordova-clipboard" spec="^1.0.0" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-http" spec="^1.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
</widget>
